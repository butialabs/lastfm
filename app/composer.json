{
  "name": "lastfm/lastfm-blue",
  "description": "LastFM.blue - weekly Last.fm stats autoposter for Bluesky (AT Protocol) and Mastodon",
  "type": "project",
  "require": {
    "php": "^8.4",
    "guzzlehttp/guzzle": "^7.10",
    "intervention/image": "^3.11",
    "josantonius/session": "^2.0",
    "league/climate": "^3.8",
    "league/plates": "^3.6",
    "league/route": "^6.2",
    "monolog/monolog": "^3.9",
    "vlucas/phpdotenv": "^5.6",
    "robmorgan/phinx": "^0.16",
    "jessedp/php-timezones": "^0.2.3",
    "barryvanveen/lastfm": "^2.0.0",
    "nyholm/psr7": "^1.8",
    "nyholm/psr7-server": "^1.1",
    "laminas/laminas-httphandlerrunner": "^2.13"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.92"
  },
  "scripts": {
    "lint": "php -l public/index.php && php -l bin/lastfm",
    "migrate": "vendor/bin/phinx migrate -c phinx.php"
  }
}

